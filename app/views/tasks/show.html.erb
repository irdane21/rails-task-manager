<div class="container">
  <h1>Task description :</h1>
  <hr>
  <div class="d-flex flex-row">
    <div class="p-2">
      <h2><%= @task.title %></h2>
    <p><%= @task.details %></p>

    <% if @task.completed == true %>
      <p> [x] The task is done!</p>
    <% else %>
      <p> [ ] The task is not done </p>
    <% end %>
    </div>
    <div class="p-2">
      <%= link_to "Edit the task", edit_task_path(@task), class:"btn btn-success"%>
    </div>
  </div>
  <hr>

  <%= link_to "Back to the list", tasks_path %>
</div>
