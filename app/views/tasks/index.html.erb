<div class="container">
  <h1>Vous êtes sur la répertoire de Tâches</h1>

<% @tasks.each do |task| %>
  <span class="state-icon glyphicon glyphicon-<%= task.completed ? 'check' : 'unchecked' %>">
  </span>
  <%= link_to task.title, task_path(task) %>
  <%= link_to "", task_path(task),
        class: "glyphicon glyphicon-trash",
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  <br>
<% end %>
<hr>

<%= link_to "+ Add a new task", new_task_path %>
</div>
